{
    "version": 2,
    "builds": [
      { "src": "server.py", "use": "@vercel/python" },
      {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": {
            "distDir": "static"
        }
    }
    ],
    "routes": [
      { "src": "/(.*)", "dest": "/server.py" }
    ],
    "env": {
      "APP_MODULE": "server:app"
    }
}
